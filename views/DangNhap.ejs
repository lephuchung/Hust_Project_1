<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/png" href="/img/Poseidon Of Sea Logo.png"/>
    <link rel="stylesheet" href="/css/preset.css">
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/grid.css">
    <link rel="stylesheet" href="/css/general.css">
    <link rel="stylesheet" href="/css/dangnhap.css">
    <script src="/js/togglePassword.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <title>Đăng nhập</title>
    
</head>
<body>
    <div id="main">

        <!-- header -->
        <div class="header">
            <div class="header__logo">
               <img src="/img/Poseidon Of Sea Logo.png" alt="Logo công ty" class="header__logoImg" >
            </div>
            <div class="header__navbar">
                <ul class="header__navbarList">
                </ul>
            </div>
        </div>

        <!-- container -->
        <div class="container">
            <div class="grid wide">
                <div class="wide row">
                    <div class="col l-10 l-o-1 m-12 c-12 content">                    
                        <div class="content__main">
                            <div class="col l-6 m-6 c-12 content_Login">
                                <div class=" content_LoginForm">
                                    <h1 style="text-align: center;">Đăng nhập</h1>
                                    <form method="post" action="/Profile">
                                        <div class="content__LoginFormComponent">
                                            <input class="content__FormInput" id="account" type="text"
                                            placeholder="Nhập tài khoản" name="MaNhanVien">
                                        </div>
                                        <div class="content__LoginFormComponent">
                                            <input class="content__FormInput" id="password" type="password"
                                            placeholder="Nhập mật khẩu" name="MatKhau">
                                            <input type="checkbox" style="margin-left: 10px;" class="checkbox_chung" id="showPassword" onclick="togglePassword()">
                                        </div>
                                        <button type="submit" class="content__FormLoginBtn">Đăng nhập</button>
                                    </form>
                                </div>
                            </div>
                            <div class="col l-6 m-6 c-0 content__Logo">
                                <div class="content__IntroTitle">
                                    <h1>Web Quản Lý Của Công Ty POSEIDON OF SEA</h1>
                                    <h1>Xin Chào</h1>
                                    <h1>Đăng nhập vào hệ thống</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- footer -->
        <div class="footer">
        </div>

    </div>   
</body>
</html>